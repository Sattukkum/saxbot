# Токен Telegram бота (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# Настройки PostgreSQL (для docker-compose эти значения уже настроены)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=saxbot
POSTGRES_PASSWORD=saxbot_password
POSTGRES_DB=saxbot
POSTGRES_SSLMODE=disable

# ID разрешённых чатов (через запятую)
ALLOWED_CHATS=123456789,-987654321
TARGET_CHAT=-123456789
# ID топика/треда для квиза (если чат является форумом, иначе оставить пустым)
QUIZ_THREAD_ID=

# ID админов (через запятую)
ADMINS=111222333,444555666
ADMINS_USERNAMES=admin1,admin2

# Аргументы для SaxBot (опционально)
# SAXBOT_ARGS=./saxbot --clear-redis  # Запуск с очисткой Redis
# SAXBOT_ARGS=./saxbot --info         # Показать информацию о БД
# SAXBOT_ARGS=./saxbot                # Обычный запуск (по умолчанию)

